# ==============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env for local development
# Copy this file to .env.docker for Docker production

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
APP_NAME=shopsifu
APP_DEBUG=true
APP_LOG_LEVEL=debug
APP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ==============================================
# HTTP SERVER CONFIGURATION
# ==============================================
HTTP_HOST=0.0.0.0
HTTP_PORT=3000
HTTP_VERSIONING_ENABLE=true
HTTP_VERSION=1
SERVER_HEALTH_CHECK_PATH=/health
TZ=Asia/Ho_Chi_Minh
NODE_OPTIONS=--max-old-space-size=2048

# ==============================================
# AUTHENTICATION & JWT
# ==============================================
AUTH_ACCESS_TOKEN_SECRET=your-dev-access-token-secret-here
AUTH_REFRESH_TOKEN_SECRET=your-dev-refresh-token-secret-here
AUTH_ACCESS_TOKEN_EXP=1d
AUTH_REFRESH_TOKEN_EXP=7d
AUTH_OTP_EXP=5m

# ==============================================
# COOKIE CONFIGURATION
# ==============================================
COOKIE_SECURE=false
COOKIE_ACCESS_TOKEN_PATH=/
COOKIE_ACCESS_TOKEN_DOMAIN=
COOKIE_REFRESH_TOKEN_PATH=/
COOKIE_REFRESH_TOKEN_DOMAIN=
COOKIE_CSRF_TOKEN_PATH=/
COOKIE_CSRF_TOKEN_DOMAIN=
COOKIE_CSRF_TOKEN_EXP=1h

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_NAME="Super Admin"
ADMIN_PASSWORD=your-dev-admin-password
ADMIN_EMAIL="admin@example.com"
ADMIN_PHONE_NUMBER=0123456789

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=shopsifu
POSTGRES_PASSWORD=your-dev-db-password
POSTGRES_DB=shopsifu
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://shopsifu:your-dev-db-password@localhost:5432/shopsifu?schema=public
DATABASE_DIRECT_URL=postgresql://shopsifu:your-dev-db-password@localhost:5432/shopsifu?schema=public

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-dev-redis-password
REDIS_URL=redis://:your-dev-redis-password@localhost:6379
REDIS_ENABLE_TLS=false
REDIS_MAXMEMORY=2gb
REDIS_CONNECTION_NAME=shopsifu

# ==============================================
# ELASTICSEARCH CONFIGURATION
# ==============================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX_PRODUCTS=products
ELASTICSEARCH_HEAP_SIZE=2g
ELASTICSEARCH_NODE_NAME=es01
ELASTICSEARCH_CLUSTER_NAME=shopsifu-cluster
ELASTICSEARCH_DISCOVERY_TYPE=single-node

# ==============================================
# GOOGLE AUTH CONFIGURATION
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/sso/google/callback
GOOGLE_REDIRECT_URI_GOOGLE_CALLBACK=http://localhost:3000/auth/google/callback

# ==============================================
# PAYMENT API KEY CONFIGURATION
# ==============================================
PAYMENT_API_KEY=your-dev-payment-api-key

# ==============================================
# VNPAY CONFIGURATION
# ==============================================
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_SECURE_SECRET=your-vnpay-secure-secret

# ==============================================
# S3 CONFIGURATION
# ==============================================
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your-dev-s3-access-key
S3_SECRET_KEY=your-dev-s3-secret-key
S3_BUCKET_NAME=shopsifu

# ==============================================
# RESEND API KEY CONFIGURATION
# ==============================================
RESEND_API_KEY=your-dev-resend-api-key

# ==============================================
# ERROR TRACKING - SENTRY
# ==============================================
SENTRY_DSN=your-dev-sentry-dsn

# ========================================
# MONITORING CONFIGURATION
# ========================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=30
PROMETHEUS_WEB_ENABLE_LIFECYCLE=true
PROMETHEUS_WEB_ENABLE_ADMIN_API=true
PROMETHEUS_WEB_ENABLE_TELEMETRY=false

GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-dev-grafana-password
GRAFANA_ALLOW_SIGNUP=false
GRAFANA_ANONYMOUS_ENABLED=false
GRAFANA_SERVER_HTTP_PORT=3000
GRAFANA_SECURITY_DISABLE_GRAVATAR=true
GRAFANA_SECURITY_COOKIE_SECURE=false
GRAFANA_SECURITY_COOKIE_HTTPONLY=true

KIBANA_PORT=5601
KIBANA_SERVER_NAME=kibana
KIBANA_ELASTICSEARCH_HOSTS=http://localhost:9200
KIBANA_SERVER_SSL_ENABLED=false
KIBANA_XPACK_SECURITY_ENABLED=false

PGBOUNCER_PORT=6432
