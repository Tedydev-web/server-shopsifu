{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "jsx": "react",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test",
    "initialScript"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*coverage"
  ]
}
