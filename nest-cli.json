{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc",
        "extensions": [".js", ".ts", ".jsx", ".tsx"]
      }
    },
    "deleteOutDir": true,
    "assets": [
      {
        "include": "languages/**/*",
        "watchAssets": true
      }
    ]
  }
}
