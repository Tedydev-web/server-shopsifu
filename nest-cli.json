{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"builder": {
			"type": "swc",
			"options": {
				"swcrcPath": ".swcrc",
				"extensions": [".js", ".ts", ".jsx", ".tsx"]
			}
		},
		"deleteOutDir": true,
		"assets": [
			{
				"include": "shared/**/*, emails/**/*",
				"watchAssets": true,
				"outDir": "dist/src"
			}
		]
	}
}
